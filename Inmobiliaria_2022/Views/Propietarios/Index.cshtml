@model IEnumerable<Inmobiliaria_2022.Models.Propietario>

@{ViewData["Title"] = "Lista";}
<div class="card bg-light border border-primary">
    <div class="card-header border-bottom border-primary bg-light text-center"><h3>Propietario</h3></div>
    <div class="card-header border-bottom border-primary bg-light"><a class="btn btn-success text-white mr-2" asp-action="Create">Crear</a></div>
    <div class="card-body">
        <h5 class="card-title text-primary">Listado de Propietarios</h5>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nombre)</th>
            <th>@Html.DisplayNameFor(model => model.Apellido)</th>
            <th>@Html.DisplayNameFor(model => model.Dni)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
            <td>@Html.DisplayFor(modelItem => item.Apellido)</td>
            <td>@Html.DisplayFor(modelItem => item.Dni)</td>
            <td>
                @if (User.IsInRole("Administrador")){
                 @Html.ActionLink("Eliminar", "Delete", new {id=item.Id })} |
                 @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
                 @Html.ActionLink("Detalles", "Details", new { id=item.Id}) |
                 @Html.ActionLink("Ver Inmueble", "VerInmueble", new {dni=item.Dni }) @*2-Listar los inmuebles que les correspondan a un propietario*@
		    </td>
        </tr>}
    </tbody>
   </table>
  </div>
 </div>