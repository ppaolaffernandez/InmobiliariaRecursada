@model IEnumerable<Inmobiliaria_2022.Models.Inmueble>

@{ViewData["Title"] = "VerInmueble";}

<div class="card bg-light border border-primary">
    <div class="card-header border-bottom border-primary bg-light text-center"><h3>Propietario</h3></div>
    <div class="card-body">
        <h5 class="card-title text-primary">Inmuebles Por Propietarios</h5>
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Direccion)</th>
                    <th>@Html.DisplayNameFor(model => model.Ambientes)</th>
                    <th>@Html.DisplayNameFor(model => model.TipoNombre)</th>
                    <th>@Html.DisplayNameFor(model => model.Costo)</th>
                    <th>@*@Html.DisplayNameFor(model => model.PropietarioId)*@Propietario</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model) {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Direccion)</td>
                    <td>@Html.DisplayFor(modelItem => item.Ambientes)</td>
                    <td>@Html.DisplayFor(modelItem => item.TipoNombre)</td>
                    <td>@Html.DisplayFor(modelItem => item.Costo)</td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Propietario.Apellido)
                        @Html.DisplayFor(modelItem => item.Propietario.Nombre)
                    </td>
                </tr>}
             </tbody>
           </table>
     </div>
     <div class="card-header border-top border-primary bg-light">
         <a class="btn btn-secondary" asp-action="Index">Volver al Lista</a>
     </div>
</div>
