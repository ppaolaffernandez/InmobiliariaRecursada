@model Inmobiliaria_2022.Models.Usuario

@{ViewData["Title"] = "Cambiar Avatar";}

<div class="card bg-light border border-primary">
        <div class="card-header border-bottom border-primary bg-light"><h4 class="card-title text-primary">Avatar</h4></div>
        <form asp-action="Cambiaravatar" enctype="multipart/form-data">
        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
              @*    <label asp-for="Id" class="control-label"></label>*@
                    <input asp-for="Id" class="form-control"type="hidden" />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
           
                <div class="form-group">			
			        @if (Model.Avatar != "") {<img src="@Model.Avatar" class="rounded-circle" alt="Avatar" width="100" height="100">}
			        else {<p>Sin avatar</p>}
		        </div>
                <div class="form-group">
			        <label asp-for="AvatarFile" class="control-label"></label>
			        <input type="file" name="AvatarFile" />
			        <span asp-validation-for="AvatarFile" class="text-danger"></span>
			    </div>
        </div>
        <div class="card-header border-top border-primary bg-light">
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
                <a class="btn btn-secondary" asp-controller="Home" asp-action="Index">Cancelar</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}}



