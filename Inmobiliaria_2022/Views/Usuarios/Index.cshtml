@model IEnumerable<Inmobiliaria_2022.Models.Usuario>

@{ViewData["Title"] = "Lista";}

<div class="card bg-light border border-primary">
    <div class="card-header border-bottom border-primary bg-light text-center"><h3>Usuario</h3></div>
    <div class="card-header border-bottom border-primary bg-light"><a class="btn btn-success text-white mr-2" asp-action="Create">Nuevo Usuario</a></div>
    <div class="card-body">
        <h5 class="card-title text-primary">Listado de Usuarios</h5>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Avatar) 
            <th>@Html.DisplayNameFor(model => model.Nombre)</th>
            <th>@Html.DisplayNameFor(model => model.Apellido)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>@Html.DisplayNameFor(model => model.Rol)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
            @*if(@item.Avatar != null || item.Avatar != " "){*@
                <img src="@item.Avatar" class="rounded-circle" alt="Perfil" width="35" height="35">
            @*else{}*@
			</td>
            <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
            <td>@Html.DisplayFor(modelItem => item.Apellido)</td>
            <td>@Html.DisplayFor(modelItem => item.Email)</td>
            <td>@Html.DisplayFor(modelItem => item.RolNombre)</td>
            <td>
                @Html.ActionLink("Editar", "Edit", new {  id=item.Id  }) |
                @Html.ActionLink("Detalles", "Details", new {  id=item.Id  }) |
                @Html.ActionLink("Eliminar", "Delete", new {id=item.Id })
            </td>
        </tr>}
    </tbody>
  </table>
 </div>
</div>